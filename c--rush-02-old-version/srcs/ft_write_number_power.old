#include "ft_lib.h"
#include "rush.h"

void ft_write_number_power(int size, char *buffer)
{
	int power_size;
	char *power_size_char;

	if (size >= 3)
	{
		power_size = ft_iterative_power(1000, size / 3);
		power_size_char = ft_itoa(power_size);
		ft_putchar(' ');
		ft_write_number(ft_strstr(buffer, power_size_char), buffer);
	}
}
